---
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Lichtspielzeit - Ankommen. Verbinden. Einfach sein." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<style>
			/* Hier können wir später eine schönere, selbst-gehostete Schriftart einbinden */
			@import url('https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap' );
			body { font-family: 'Lora', serif; }
		</style>
<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
	</head>
	<body class="bg-amber-50 text-stone-800">
<div id="particles-js" class="absolute inset-0 -z-10"></div>

		<main class="container mx-auto px-8 py-16 text-center">
			<slot />
		</main>
        <footer class="text-center py-8 text-sm text-stone-500">
            <a href="/impressum" class="hover:text-stone-800 mx-2">Impressum</a>
            <a href="/datenschutz" class="hover:text-stone-800 mx-2">Datenschutz</a>
            <p class="mt-2">© {new Date().getFullYear()} Lichtspielzeit</p>
        </footer>
<script is:inline>
  particlesJS("particles-js", {
    "particles": {
      "number": {
        "value": 50,
        "density": {
          "enable": true,
          "value_area": 800
        }
      },
      "color": {
        "value": "#d1d5db" // Ein sanftes Grau, passend zum Text
      },
      "shape": {
        "type": "circle",
      },
      "opacity": {
        "value": 0.4,
        "random": true,
      },
      "size": {
        "value": 2,
        "random": true,
      },
      "line_linked": {
        "enable": false, // Keine Verbindungslinien
      },
      "move": {
        "enable": true,
        "speed": 0.5, // Sehr langsam
        "direction": "none",
        "random": true,
        "straight": false,
        "out_mode": "out",
      }
    },
    "interactivity": {
      "detect_on": "canvas",
      "events": {
        "onhover": {
          "enable": false, // Keine Reaktion bei Mausbewegung
        },
        "onclick": {
          "enable": false,
        },
        "resize": true
      }
    },
    "retina_detect": true
  });
</script>

	</body>
</html>
