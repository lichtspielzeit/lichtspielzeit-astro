---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* 
    Hier k√∂nnen globale Stile platziert werden.
    Tailwind's Basis-Stile werden automatisch durch die Integration angewendet.
  */
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
