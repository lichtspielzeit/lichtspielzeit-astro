---
import Layout from '../layouts/Layout.astro';
import heroImage from '../assets/hero-image.jpg';
import { Image } from 'astro:assets';
---

<Layout title="Hero Landing Page">
  <div class="page-wrapper">
    <!-- Hintergrundbild -->
    <Image 
      src={heroImage} 
      alt="Hero Hintergrundbild" 
      class="background-image"
    />

    <!-- Vordergrund-Inhalt -->
    <main class="main-content">
      <div class="text-center text-white">
        <h1 class="text-5xl font-bold mb-4">Ihre Überschrift hier</h1>
        <p class="text-xl">Ein kurzer, prägnanter Untertitel.</p>
      </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <a href="/impressum" class="hover:underline">Impressum</a>
      <a href="/datenschutz" class="hover:underline">Datenschutz</a>
    </footer>
  </div>
</Layout>

<style>
  .page-wrapper {
    display: grid;
    grid-template-rows: 1fr auto; /* Hauptinhalt wächst, Footer bleibt unten */
    height: 100vh; /* Füllt die gesamte Bildschirmhöhe */
    position: relative; /* Wichtig für die Positionierung des Hintergrundbildes */
    isolation: isolate; /* Erstellt einen neuen Stacking-Kontext */
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Deckt den gesamten Bereich ab, ohne das Seitenverhältnis zu verzerren */
    z-index: -1; /* Legt das Bild hinter den Inhalt */
    filter: brightness(0.6); /* Dunkelt das Bild ab, um den Text lesbarer zu machen */
  }

  .main-content {
    display: grid;
    place-items: center; /* Zentriert den Inhalt horizontal und vertikal */
    padding: 1rem;
  }

  .footer {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    padding: 1rem;
    color: white;
    font-size: 0.875rem;
  }
</style>
